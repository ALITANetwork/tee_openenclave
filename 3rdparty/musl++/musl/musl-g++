/usr/bin/g++ "$@" \
    -fpermissive \
    -std=c++14 \
    -nostdinc \
    -isystem /opt/musl++/include \
    -I /opt/musl++/include/libcxx \
    -isystem /opt/musl++/include \
    -isystem /usr/include \
    -isystem /usr/include/x86_64-linux-gnu \
    -DHAVE_PTHREAD \
    -L /opt/musl++/lib \
    -nostartfiles \
    /opt/musl++/lib/crt1.o \
    -nodefaultlibs \
    -lc++ \
    -lc++abi \
    -lunwind \
    -lc
