if(("${OE_TOOLCHAIN_PREFIX}" STREQUAL "") AND ("$ENV{OE_TOOLCHAIN_PREFIX}" STREQUAL ""))
    set(CMAKE_ASM_COMPILER ${CMAKE_BINARY_DIR}/toolchains/arm/bin/arm-linux-gnueabihf-gcc)
